@* navigating to this component requires you to pass in a root directory through the url *@
@page "/meddy-explorer/{*rootDir}"
@layout MainLayout
@using MeddyExplorerApp.Pages.Explorer
@using MeddyExplorerApp.Services;
@inject MeddyExplorerState meddyExplorerState

<MudLayout>
    <MEAMeddyExplorerAppBar /> @* overlayed app bar to achieve a sort of combined bar of buttons (combining with panels' toolbars) *@
    <MEAMeddyExplorerDrawer />
    <MEADetailsPanel />

    <MudMainContent Class="pa-0"> @* zero padding so that the contents don't use the AppBar's padding *@
        <MEAFileSystemNavigator />
    </MudMainContent>
</MudLayout>

@code
{
    [Parameter, EditorRequired]
    public string rootDir { get; set; }

    protected override void OnInitialized()
    {
        meddyExplorerState.Initialize(rootDir);
    }
}
