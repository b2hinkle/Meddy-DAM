<MudDrawer Color="Color.Dark" Elevation="0" Variant="@DrawerVariant.Mini" MiniWidth="5px;" @bind-Open="@Open" @onclick="@OnClickDrawer">
    @if (Open)
    {
        <MudToolBar DisableGutters="true" Dense="true">
            <MudSpacer />
            <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Filled.Add" OnClick="@OnAddButtonClick" />
        </MudToolBar>
        <MudNavMenu>
            <MudNavLink Match="@NavLinkMatch.All">
                <MudText Typo="@Typo.body1">
                    Store
                </MudText>
            </MudNavLink>
            <MudNavLink Match="@NavLinkMatch.All">
                <MudText Typo="@Typo.body1">
                    Library
                </MudText>
            </MudNavLink>
            <MudNavLink Match="@NavLinkMatch.All">
                <MudText Typo="@Typo.body1">
                    Community
                </MudText>
            </MudNavLink>
        </MudNavMenu>
    }
</MudDrawer>

@code
{
    public bool Open { get; set; }

    private void OnAddButtonClick()
    {

    }

    private void OnClickDrawer()
    {
        Open = !Open;
    }
}
