@inherits LayoutComponentBase
@layout MainLayout

<MudLayout>
    <AppBar OnToggleDrawerClickedEvent="@(() => DrawerOpen = !DrawerOpen)" />
    <NavMenuDrawer DrawerOpen="@DrawerOpen" />
    <MudMainContent>
        <MEACurrentDirTextField />
        @Body
        <MudDrawer Anchor="@Anchor.End" ClipMode="@DrawerClipMode.Docked" Open="true">
            <MEAFileDetails />
        </MudDrawer>
    </MudMainContent>
</MudLayout>

@code
{
    private bool DrawerOpen = false;
}
